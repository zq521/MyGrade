<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/Mystylre</item>
        <!--隐藏标题栏-->
        <!--item name="windowNoTitle">true</item-->
    </style>
    
    <style name="Mystylre">
        <item name="android:activityOpenEnterAnimation">@anim/zoom_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/zoom_exit</item>
    </style>


    <style name="Xhz" parent="Theme.AppCompat.Dialog">
        <!--是否显示阴影-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--背景-->
        <item name="android:windowBackground">@android:color/black</item>
        <!--进度颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
