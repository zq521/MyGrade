<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:ios="false">
    <!--关闭阻塞式-->

    <RelativeLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:duplicateParentState="true">
        <ImageView
            android:id="@+id/con_image_per_mes"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textSize="12sp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_toLeftOf="@+id/unread_msg_number"
            android:layout_toRightOf="@id/con_image_per_mes"
            android:gravity="center_vertical"
            android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/con_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/con_tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#8C8C8C"
                android:textSize="16sp"
                android:visibility="gone"/>
        </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/con_btn_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="置顶"/>
    <Button
        android:id="@+id/con_btn_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>