<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="#e3e3e3">

        <EditText
            android:layout_marginTop="8sp"
            android:background="#fff"
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:hint="搜索"
            android:textStyle="italic" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f00">

        <ImageView
            android:id="@+id/ic_error_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/con_intent_text"
            android:src="@drawable/ic_error_black_24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/con_intent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <com.example.zhaoqiang.mygrade.help.Refresh
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20">

        <ListView
            android:id="@+id/listview_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dividerHeight="3dp"></ListView>

    </com.example.zhaoqiang.mygrade.help.Refresh>


</LinearLayout>